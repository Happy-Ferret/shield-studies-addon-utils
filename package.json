{
  "name": "shield-studies-addon-utils",
  "description": "Utilities for building Shield-Study Mozilla Firefox add-ons.",
  "version": "5.0.0-alpha1",
  "author": "Mozilla",
  "bugs": {
    "url": "https://github.com/mozilla/shield-studies-addon-utils/issues"
  },
  "dependencies": {
    "shield-study-schemas": "^0.8.3"
  },
  "devDependencies": {
    "ajv": "^4.11.2",
    "assert": "^1.4.1",
    "doctoc": "^1.3.1",
    "eslint": "^4.0.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-mozilla": "^0.4.0",
    "fixpack": "^2.3.1",
    "fs-extra": "^4.0.0",
    "fx-runner": "^1.0.7",
    "geckodriver": "^1.8.0",
    "mocha": "^3.4.2",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.11.0",
    "selenium-webdriver": "^3.4.0",
    "web-ext": "^2.5.0",
    "webpack": "^2.6.1"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/mozilla/shield-studies-addon-utils#readme",
  "keywords": [
    "addon",
    "jsm",
    "mozilla",
    "normandy",
    "shield",
    "shield-study"
  ],
  "license": "MPL-2.0",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/mozilla/shield-studies-addon-utils.git"
  },
  "scripts": {
    "build": "webpack",
    "docformat": "doctoc --title '**Contents**' docs/*.md && prettier '**/*.md' --write",
    "eslint": "eslint src --ext jsm --ext js --ext json",
    "eslint-fix": "npm run eslint -- --fix",
    "format": "prettier '**/*.{css,js,jsm,json,md}' --trailing-comma=all --ignore-path=.eslintignore --write",
    "lint": "npm-run-all lint:*",
    "lint:eslint": "npm run eslint",
    "lint:fixpack": "fixpack",
    "postformat": "npm run eslint-fix && fixpack",
    "prebuild": "npm run lint",
    "prepack": "fixpack && npm run build",
    "pretest": "npm run build && npm run test-addon:bundle-utils && npm run test-addon:build",
    "pretest-addon:run": "npm run pretest",
    "test": "FIREFOX_BINARY=${FIREFOX_BINARY:-firefox} XPI_NAME=test-addon/dist/shield_utils_test_add-on-1.0.0.zip mocha test-addon/test/functional/ --bail",
    "test-addon:build": "cd test-addon && web-ext build",
    "test-addon:bundle-utils": "mkdir -p test-addon/src/privileged/shieldUtils && cp webExtensionApi/dist/api.js test-addon/src/privileged/shieldUtils/api.js && cp webExtensionApi/schema.json test-addon/src/privileged/shieldUtils/schema.json",
    "test-addon:run": "cd test-addon && web-ext run --no-reload"
  }
}
