{
  "name": "A Small Shield Add-on",
  "description": "Demo of shield-studies-addon-utils",
  "version": "1.0.0",
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "shield-utils-small-study-demo@shield.mozilla.org",
      "strict_min_version": "60.0"
    }
  },
  "experiment_apis": {
    // study is the exported object from api.js
    "study": {
      // namespace keys match the paths below
      "schema": "./privileged/study/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "./privileged/study/api.js",
        // keys of the object exported by api.js:study.getApi()
        "paths": [["study"], ["studyTest"], ["prefs"]]
      }
    }
  },
  "permissions": ["storage"],
  "background": {
    "scripts": ["study.js", "background.js"]
  },
  "icons": {
    "48": "icons/shield-icon.svg"
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/shield-icon.svg",
    "default_title": "Test"
  }
}
