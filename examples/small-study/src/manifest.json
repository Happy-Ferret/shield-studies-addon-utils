{
  "name": "A Small Shield Addon",
  "description": "Demo of shield-studies-addon-utils",
  "version": "1.0.0",
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "shield-studies-demo@shield.mozilla.org",
      "strict_min_version": "60.0"
    }
  },
  "experiment_apis": {
    "study": {
      "schema": "./privileged/study/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "./privileged/study/api.js",
        "paths": [["study"]]
      }
    }
  },
  "permissions": ["storage"],
  "background": {
    "scripts": ["study.js", "background.js"]
  },

  "browser_action": {
    "browser_style": true,
    "default_title": "Test"
  }
}
